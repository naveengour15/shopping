<div class="row">
    
    <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
        <h1>Checkout</h1>
        <h4>Total Price :{{total}} </hr>    
        <div id="charge-error" class="alert alert-danger {{#if noError}}hidden{{/if}}">
            {{errMsg}}
        </div>
        <form action="/checkout" method="post" id="checkout-form">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <label name="uname">Name</label>
                        <input type="text" id="uname" class="form-control" required name="name">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label name="uaddress">Address</label>
                        <input type="text" id="uaddress" class="form-control" required name="address">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label name="card-name">Cart Holder</label>
                        <input type="text" id="card-name" class="form-control" required>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label name="card-number">Credit Card</label>
                        <input type="text" id="card-number" class="form-control" required>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label name="card-expiry-month">Expiration month</label>
                                <input type="text" id="card-expiry-month" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label name="card-expiry-year">Expiration year</label>
                                <input type="text" id="card-expiry-year" class="form-control" required>
                            </div>
                        </div>

                    </div>        
                </div>
                 <div class="col-xs-12">
                    <div class="form-group">
                        <label name="card-cvc">CVC</label>
                        <input type="text" id="card-cvc" class="form-control" required>
                    </div>
                </div>
                <div class="col-xs-12">
                    <button type="submit" class="btn btn-success">Buy now</button>
                </div>    
            </div>  
        </form>          
    </div>      

</div>
<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="/javascripts/checkout.js"></script>